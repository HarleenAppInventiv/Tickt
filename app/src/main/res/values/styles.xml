<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>
    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_style</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="popupWindowAnim">
        <item name="android:windowEnterAnimation">@anim/slide_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_to_right</item>
    </style>

    <style name="EditTextBackground" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="hintTextColor">@color/color_a8b4bc</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/_13sdp</item>
        <item name="android:paddingBottom">@dimen/_13sdp</item>
        <item name="android:textCursorDrawable">@drawable/bg_blue_cursor</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="fontFamily">@font/neue_haas_display_medium</item>
        <item name="android:fontFamily">@font/neue_haas_display_medium</item>
    </style>


    <style name="EditTextPasswordBackground" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/_13sdp</item>
        <item name="android:progressBackgroundTint">@color/transparent</item>
        <item name="android:paddingBottom">@dimen/_13sdp</item>
        <item name="android:textCursorDrawable">@drawable/bg_blue_cursor</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="fontFamily">@font/neue_haas_display_medium</item>
        <item name="android:fontFamily">@font/neue_haas_display_medium</item>
        <item name="android:background">@drawable/selector_grey_blue_stroke_rectangle</item>
    </style>

    <style name="EditTextPasswordBackground16" parent="EditTextPasswordBackground">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="ErrorTextTheme" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_FF374E</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">invisible</item>
        <item name="fontFamily">@font/neue_haas_display_roman</item>
        <item name="android:fontFamily">@font/neue_haas_display_roman</item>
    </style>


    <style name="SpannableText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_0b41a8</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="fontFamily">@font/neue_haas_display_bold</item>
        <item name="android:fontFamily">@font/neue_haas_display_bold</item>
    </style>


    <style name="OtpEditTextStyle">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789</item>
        <item name="android:singleLine">true</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/bg_blue_cursor</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/neue_haas_display_medium</item>
        <item name="android:fontFamily">@font/neue_haas_display_medium</item>
        <item name="android:background">@drawable/selector_grey_blue_stroke_rectangle</item>
    </style>

    <style name="style_tab" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/neue_haas_display_bold</item>
        <item name="android:fontFamily">@font/neue_haas_display_bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:singleLine">true</item>
        <item name="maxLines">1</item>
    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_FF374E</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>