<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:background="@drawable/rectangle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp" />

        <androidx.cardview.widget.CardView
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/search_toolbar_back"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_left"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_job_title"
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="all around me"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/color_313d48"
                        android:padding="@dimen/_15sdp" />

                    <RelativeLayout
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/tv_filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_filter" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/_22sdp"
                            android:text="2"
                            android:visibility="gone"
                            android:id="@+id/tv_filter_count"
                            android:layout_margin="@dimen/_1sdp"
                            app:fontFamily="@font/neue_haas_display_medium"
                            android:textColor="@color/color_313d48"
                            android:textSize="@dimen/_11ssp"
                            android:gravity="center"
                            android:background="@drawable/bg_selected_progress_dot"
                            android:layout_height="@dimen/_22sdp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_search_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="@dimen/_10sdp"
                        android:ellipsize="end"
                        app:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/select_date"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/color_313d48"
                        android:textSize="@dimen/_15ssp"
                        tools:text="15 Sep - 20 Sep" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_search_place"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_nearby"
                        android:drawablePadding="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:text="@string/select_place"
                        app:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/color_313d48"
                        android:textSize="@dimen/_15ssp"
                        tools:text="Gandhinagar" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</layout>