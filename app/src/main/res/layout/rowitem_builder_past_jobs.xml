<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main_record_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_19sdp"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_20sdp">

            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- <com.makeramen.roundedimageview.RoundedImageView
                     app:riv_oval="true"
                     android:padding="@dimen/_5sdp"
                     android:scaleType="fitXY"
                     android:background="@drawable/bg_blue_circle_dark"
                     android:layout_width="@dimen/_45sdp"
                     android:src="@drawable/active_circle"
                     android:layout_height="@dimen/_45sdp"
                     android:id="@+id/iv_user_profile" />-->

                <FrameLayout
                    android:id="@+id/fl_background"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:background="@drawable/bg_selected_rect_trade_new">

                    <ImageView
                        android:id="@+id/iv_user_profile"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/electrician"
                        app:tint="@color/white" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:ellipsize="end"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:maxLines="2"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_17ssp"
                        tools:text="Dummy Text" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:ellipsize="end"
                        app:fontFamily="@font/inter_regular"
                        android:maxLines="2"
                        android:textColor="@color/color_313d48"
                        android:textSize="@dimen/_14ssp"
                        tools:text="Dummy Text" />


                </LinearLayout>


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/next" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/rl_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_header"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_light_rect"
                android:orientation="vertical"
                android:paddingStart="@dimen/_3sdp"
                android:paddingTop="@dimen/_16sdp"
                android:paddingEnd="@dimen/_3sdp"
                android:paddingBottom="@dimen/_16sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="@dimen/_7sdp"
                        android:ellipsize="end"
                        app:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/color_313d48"
                        android:textSize="@dimen/_14ssp"
                        tools:text="32 min ago" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_dollor_new"
                        android:drawablePadding="@dimen/_5sdp"
                        android:ellipsize="end"
                        app:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/color_313d48"
                        android:textSize="@dimen/_14ssp"
                        tools:text="32 min ago" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_place"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_nearby"
                        android:drawablePadding="@dimen/_3sdp"
                        android:ellipsize="end"
                        app:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/color_313d48"
                        android:textSize="@dimen/_14ssp"
                        tools:text="32 min ago" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_17sdp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/color_0b41a8"
                        android:textSize="@dimen/_13ssp"
                        tools:text="32 min ago" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_milestone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_details"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_toLeftOf="@+id/tv_milestone_status"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_milestone_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:textColor="@color/color_313d48"
                    android:textSize="@dimen/_14ssp"
                    tools:text="milestone 2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_milestone_count_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    app:fontFamily="@font/neue_haas_display_roman"
                    android:textColor="@color/color_313d48"
                    android:textSize="@dimen/_14ssp"
                    tools:text="of 7" />
            </LinearLayout>


            <ProgressBar
                android:id="@+id/progressBarHor"
                style="@style/CustomProgressBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                android:layout_below="@+id/ll_milestone"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:max="100"
                android:progress="0" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_job_status_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBarHor"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@drawable/bg_drawable_rect_dfe5ef"
                app:fontFamily="@font/neue_haas_display_medium"
                android:gravity="center"
                android:padding="@dimen/_16sdp"
                android:text="@string/publish_again"
                android:textColor="@color/color_161d4a"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:id="@+id/ll_job_status_rate_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBarHor"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@drawable/bg_drawable_rect_dfe5ef"
                android:gravity="center"
                android:padding="@dimen/_16sdp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_main" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:gravity="center"
                    android:text="@string/rate_this_job"
                    android:textColor="@color/color_161d4a"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
