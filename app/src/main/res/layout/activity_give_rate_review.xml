<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_14ssp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/rate_review_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/ic_left" />


            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_6sdp"
                app:fontFamily="@font/neue_haas_display_medium"
                android:text="@string/review_the_tradie"
                android:textColor="@color/color_161d4a"
                android:textSize="@dimen/_34ssp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:ellipsize="end"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:maxLines="2"
                        android:text="@string/job"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_17ssp" />

                    <LinearLayout
                        android:id="@+id/ll_posted_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/iv_job_profile"
                            android:layout_width="@dimen/_46sdp"
                            android:layout_height="@dimen/_46sdp"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_blue_circle"
                            android:scaleType="centerCrop"
                            app:riv_oval="true" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/_8sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_job_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:ellipsize="end"
                                app:fontFamily="@font/neue_haas_display_medium"
                                android:maxLines="2"
                                android:scaleType="centerCrop"
                                android:textColor="@color/color_161d4a"
                                android:textSize="@dimen/_17ssp"
                                tools:text="Dummy Text" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_job_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_9sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:ellipsize="end"
                                app:fontFamily="@font/inter_regular"
                                android:maxLines="2"
                                android:textColor="@color/color_313d48"
                                android:textSize="@dimen/_14ssp"
                                tools:text="Dummy Text" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_job_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_9sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:ellipsize="end"
                                app:fontFamily="@font/inter_regular"
                                android:maxLines="2"
                                android:textColor="@color/color_313d48"
                                android:textSize="@dimen/_14ssp"
                                tools:text="Dummy Text" />

                        </LinearLayout>


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/job_iv_redirection"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_marginEnd="@dimen/_22sdp"
                            android:src="@drawable/ic_left_icon" />


                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_tradies_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:ellipsize="end"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:maxLines="2"
                        android:text="@string/tradie"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_17ssp" />

                    <LinearLayout
                        android:id="@+id/ll_tradies_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/iv_job_user_profile"
                            android:layout_width="@dimen/_46sdp"
                            android:layout_height="@dimen/_46sdp"
                            android:background="@drawable/bg_blue_circle"
                            android:scaleType="centerCrop"
                            app:riv_oval="true" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/_8sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_job_user_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:ellipsize="end"
                                app:fontFamily="@font/neue_haas_display_medium"
                                android:maxLines="2"
                                android:scaleType="centerCrop"
                                android:textColor="@color/color_161d4a"
                                android:textSize="@dimen/_17ssp"
                                tools:text="Dummy Text" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_job_user_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_9sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:drawableStart="@drawable/ic_star"
                                android:drawablePadding="@dimen/_5sdp"
                                android:ellipsize="end"
                                app:fontFamily="@font/inter_regular"
                                android:maxLines="2"
                                android:textColor="@color/color_313d48"
                                android:textSize="@dimen/_14ssp"
                                tools:text="Dummy Text" />


                        </LinearLayout>


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/user_iv_redirection"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_marginEnd="@dimen/_22sdp"
                            android:src="@drawable/ic_left_icon" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:ellipsize="end"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/rate_this_trade_person"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_17ssp" />

                    <com.willy.ratingbar.ScaleRatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:srb_drawableEmpty="@drawable/ic_star_reviw"
                        app:srb_drawableFilled="@drawable/ic_star_reviw_fill"
                        app:srb_numStars="5"
                        app:srb_rating="0"
                        app:srb_starHeight="@dimen/_28sdp"
                        app:srb_starPadding="@dimen/_8sdp"
                        app:srb_starWidth="@dimen/_28sdp"
                        app:srb_stepSize="0.5" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        app:fontFamily="@font/inter_regular"
                        android:text="@string/comments_"
                        android:textColor="@color/color_313d48"
                        android:textSize="@dimen/_14ssp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/post_ed_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_24sdp"
                        android:background="@drawable/bg_edittext"
                        app:fontFamily="@font/neue_haas_display_roman"
                        android:hint="@string/thanks_dot"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:maxLength="100"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingTop="@dimen/_18sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_18sdp"
                        android:singleLine="true"
                        android:textColor="@color/color_161d4a"
                        android:textColorHint="@color/color_99A4B6"
                        android:textSize="@dimen/_16ssp"
                        tools:text="Hello...this is comment" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_leave_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:layout_marginBottom="@dimen/_18sdp"
                        android:background="@drawable/bg_btn_yellow"
                        android:elevation="@dimen/_3sdp"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:gravity="center"
                        android:padding="@dimen/_15sdp"
                        android:text="@string/leave_review"
                        android:textColor="@color/color_313d48"
                        android:textSize="@dimen/_14ssp" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </LinearLayout>

</layout>
