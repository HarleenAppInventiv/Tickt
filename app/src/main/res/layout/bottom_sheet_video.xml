<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/transparent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:padding="@dimen/_25sdp"
                app:layout_behavior="@string/bottom_sheet_behavior">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_files"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_yellow"
                    android:elevation="@dimen/_3sdp"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:gravity="center"
                    android:outlineSpotShadowColor="@color/white"
                    android:padding="@dimen/_15sdp"
                    android:stateListAnimator="@null"
                    android:text="@string/take_a_video"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/bg_btn_yellow"
                    android:elevation="@dimen/_3sdp"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:gravity="center"
                    android:outlineSpotShadowColor="@color/color_fee600"
                    android:padding="@dimen/_15sdp"
                    android:text="@string/take_a_phot"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14ssp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/bg_btn_yellow"
                    android:elevation="@dimen/_3sdp"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:gravity="center"
                    android:outlineSpotShadowColor="@color/color_fee600"
                    android:padding="@dimen/_15sdp"
                    android:text="@string/upload_from_gallery_"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_file_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/bg_btn_pale"
                    android:elevation="@dimen/_3sdp"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:gravity="center"
                    android:outlineSpotShadowColor="@color/white"
                    android:padding="@dimen/_15sdp"
                    android:text="@string/upload_from_file_"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_drop_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/bg_btn_pale"
                    android:elevation="@dimen/_3sdp"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:gravity="center"
                    android:outlineSpotShadowColor="@color/white"
                    android:padding="@dimen/_15sdp"
                    android:text="@string/upload_from_dropbox"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>