<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_20sdp"
        android:background="@drawable/rectangle">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_toolbar_tv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_notification"
            android:background="@drawable/bg_btn_white"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="@dimen/_5sdp"
            app:fontFamily="@font/inter_regular"
            android:gravity="center_vertical"
            android:padding="@dimen/_15sdp"
            android:text="@string/what_jobs_do_you_after"
            android:textColor="@color/color_313d48"
            android:textSize="@dimen/_15ssp" />

        <RelativeLayout
            android:id="@+id/rl_unread_count"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_notification"
            android:layout_marginRight="-25dp"
            android:elevation="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_34ssp"
                android:layout_height="@dimen/_34ssp"
                android:padding="@dimen/_5sdp"
                android:tint="@color/quantum_yellow"
                android:src="@drawable/bg_blue_chat_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_unreadCount"
                android:textColor="@color/black"
                tools:text="0"
                android:textSize="@dimen/_12ssp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/notification" />

    </RelativeLayout>


</layout>