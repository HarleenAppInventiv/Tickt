<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_milestone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/tv_milestone_date"
                android:ellipsize="end"
                app:fontFamily="@font/neue_haas_display_roman"
                android:maxLines="2"
                android:textColor="@color/color_161d4a"
                android:textSize="@dimen/_16ssp"
                tools:text="Dummy Text" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_milestone_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:ellipsize="end"
                app:fontFamily="@font/neue_haas_display_roman"
                android:maxLines="2"
                android:textColor="@color/color_161d4a"
                android:textSize="@dimen/_16ssp"
                tools:text="Dummy Text" />


        </RelativeLayout>


    </LinearLayout>
</layout>
