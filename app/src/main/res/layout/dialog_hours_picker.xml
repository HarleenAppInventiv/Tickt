<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                app:fontFamily="@font/neue_haas_display_medium"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/recommended_hours"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_16sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:gravity="center"
                        android:text="@string/hours"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                    <com.github.stephenvinouze.materialnumberpickercore.MaterialNumberPicker
                        android:id="@+id/dialog_month_picker_picker_tv_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:mnpEditable="false"
                        app:mnpMaxValue="100"
                        app:mnpMinValue="0"
                        app:mnpSeparatorColor="@color/colorAccent"
                        app:mnpTextColor="@color/colorPrimary"
                        app:mnpTextSize="@dimen/_13sdp"
                        app:mnpTextStyle="bold"
                        app:mnpValue="0"
                        app:mnpWrapped="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:gravity="center"
                        android:text="@string/minute"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                    <com.github.stephenvinouze.materialnumberpickercore.MaterialNumberPicker
                        android:id="@+id/dialog_month_picker_picker_tv_minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:mnpEditable="false"
                        app:mnpMinValue="0"
                        app:mnpSeparatorColor="@color/colorAccent"
                        app:mnpTextColor="@color/colorPrimary"
                        app:mnpTextSize="@dimen/_13sdp"
                        app:mnpTextStyle="bold"
                        app:mnpValue="2019"
                        app:mnpWrapped="false" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_18sdp">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dialog_tv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:background="@color/transparent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_15sdp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dialog_tv_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:gravity="center"
                    android:text="@string/ok"
                    android:background="@color/transparent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>