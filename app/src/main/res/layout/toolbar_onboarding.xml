<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingTop="@dimen/_20sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/icon_outlined_directions_straight_arrows_l" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            app:fontFamily="@font/neue_haas_display_medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/color_fee600"
            android:textSize="@dimen/_20ssp"
            android:text="@string/skip" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/logo_tick" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontFamily="@font/neue_haas_display_medium"
            android:layout_below="@+id/iv_logo"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_32ssp"
            tools:text="Log In" />


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/ll_progress_dots"
           android:visibility="gone"
           android:layout_marginTop="@dimen/_15sdp"
           android:orientation="horizontal"
           android:layout_below="@+id/tv_title"
           android:layout_centerHorizontal="true">

           <View
               android:layout_width="@dimen/_6sdp"
               android:layout_height="@dimen/_6sdp"
               android:id="@+id/v1"
               android:layout_marginRight="@dimen/_12sdp"
               android:background="@drawable/bg_selected_progress_dot"/>

           <View
               android:layout_width="@dimen/_6sdp"
               android:layout_height="@dimen/_6sdp"
               android:id="@+id/v2"
               android:layout_marginRight="@dimen/_12sdp"
               android:background="@drawable/bg_selected_progress_dot"/>

           <View
               android:layout_width="@dimen/_6sdp"
               android:layout_height="@dimen/_6sdp"
               android:id="@+id/v3"
               android:layout_marginRight="@dimen/_12sdp"
               android:background="@drawable/bg_unselected_progress_dot"/>

           <View
               android:layout_width="@dimen/_6sdp"
               android:layout_height="@dimen/_6sdp"
               android:id="@+id/v4"
               android:layout_marginRight="@dimen/_12sdp"
               android:background="@drawable/bg_unselected_progress_dot"/>

           <View
               android:layout_width="@dimen/_6sdp"
               android:layout_height="@dimen/_6sdp"
               android:id="@+id/v5"
               android:layout_marginRight="@dimen/_12sdp"
               android:background="@drawable/bg_unselected_progress_dot"/>

           <View
               android:layout_width="@dimen/_6sdp"
               android:layout_height="@dimen/_6sdp"
               android:id="@+id/v6"
               android:layout_marginRight="@dimen/_12sdp"
               android:background="@drawable/bg_unselected_progress_dot"/>

           <View
               android:layout_width="@dimen/_6sdp"
               android:layout_height="@dimen/_6sdp"
               android:id="@+id/v7"
               android:layout_marginRight="@dimen/_12sdp"
               android:background="@drawable/bg_unselected_progress_dot"/>

           <View
               android:layout_width="@dimen/_6sdp"
               android:layout_height="@dimen/_6sdp"
               android:id="@+id/v8"
               android:visibility="gone"
               android:background="@drawable/bg_unselected_progress_dot"/>

       </LinearLayout>
    </RelativeLayout>


</layout>