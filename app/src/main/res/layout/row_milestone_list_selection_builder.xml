<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/row_ll_milestone_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_16sdp"
            android:paddingEnd="@dimen/_14sdp"
            android:paddingBottom="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_milestone_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_checkbox_active" />

                <RelativeLayout
                    android:id="@+id/rl_line"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/view_long"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_verticle_line" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/view_small"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_verticle_line" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_row_milestone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="-2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_milestone_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:text="@string/post_new_job"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_17ssp" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_milestone_photo_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:fontFamily="@font/inter_regular"
                    android:text="@string/photo_evidence_required"
                    android:textColor="@color/color_313d48"
                    android:textSize="@dimen/_14ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_milestone_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:fontFamily="@font/inter_regular"
                    android:text="May 24"
                    android:textColor="@color/color_313d48"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_check_approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/bg_btn_yellow"
            app:fontFamily="@font/neue_haas_display_medium"
            android:gravity="center"
            android:paddingStart="@dimen/_22sdp"
            android:paddingTop="@dimen/_14sdp"
            android:paddingEnd="@dimen/_22sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:text="@string/check_and_approve"
            android:textColor="@color/color_161d4a"
            android:textSize="@dimen/_14ssp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_check_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/bg_drawable_rect_dfe5ef"
            app:fontFamily="@font/neue_haas_display_medium"
            android:gravity="center"
            android:paddingStart="@dimen/_22sdp"
            android:paddingTop="@dimen/_14sdp"
            android:paddingEnd="@dimen/_22sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:text="@string/see_details"
            android:textColor="@color/color_161d4a"
            android:textSize="@dimen/_14ssp"
            android:visibility="gone" />

    </LinearLayout>

</layout>
