<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/cv_main_record_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_F6F7F9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_16sdp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/neue_haas_display_roman"
                        android:text="@string/item"
                        android:textColor="@color/color_313d48"
                        android:textSize="@dimen/_15ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_quote_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:text="@string/quotes"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/inter_regular"
                        android:text="@string/description"
                        android:textColor="@color/color_313d48"
                        android:textSize="@dimen/_15ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_quote_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:text="@string/quotes"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/neue_haas_display_roman"
                        android:text="@string/price"
                        android:textColor="@color/color_313d48"
                        android:textSize="@dimen/_15ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_quote_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:text="@string/quotes"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pencil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ic_pencil_quote"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</layout>
