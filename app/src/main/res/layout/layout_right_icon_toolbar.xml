<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_14sdp"
        android:paddingEnd="@dimen/_14sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/back_black"
            app:backOnClick="@{ `back` }" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_6sdp"
           android:visibility="gone"
            android:src="@drawable/back_black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_back"
            android:layout_alignBottom="@+id/iv_back"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toRightOf="@+id/iv_back"
            app:fontFamily="@font/neue_haas_display_medium"
            android:gravity="center"
            android:textColor="@color/color_161d4a"
            android:textSize="@dimen/_16ssp"
            tools:text="Wire up circuit box" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_6sdp"
            android:visibility="gone"
            android:layout_alignTop="@+id/iv_back"
            android:layout_alignBottom="@+id/iv_back"
            android:src="@drawable/ic_edit" />

    </RelativeLayout>


</layout>