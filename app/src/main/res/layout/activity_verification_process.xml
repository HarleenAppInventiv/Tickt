<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvvm.view.tradie.VerificationProcessActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/back_black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:fontFamily="@font/neue_haas_display_medium"
        android:text="@string/id_verification"
        android:textColor="@color/color_161d4a"
        android:textSize="@dimen/_32ssp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        app:fontFamily="@font/neue_haas_display_light"
        android:justificationMode="inter_word"
        android:lineSpacingExtra="@dimen/_5sdp"
        android:text="@string/id_verification_message"
        android:textColor="@color/color_313d48"
        android:textSize="@dimen/_18ssp" />

</androidx.appcompat.widget.LinearLayoutCompat>
