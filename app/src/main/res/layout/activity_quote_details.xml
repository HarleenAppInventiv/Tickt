<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/temp_mile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_left" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_6sdp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_user_profile"
                        android:layout_width="@dimen/_46sdp"
                        android:layout_height="@dimen/_46sdp"
                        android:layout_gravity="top"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/bg_circle_dfe5ef"
                        android:scaleType="fitXY"
                        app:riv_oval="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-1dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/neue_haas_display_medium"
                            android:maxLines="2"
                            android:textColor="@color/color_161d4a"
                            android:textSize="@dimen/_16ssp"
                            tools:text="Dummy Text" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/inter_regular"
                            android:maxLines="2"
                            android:textColor="@color/color_313d48"
                            android:textSize="@dimen/_14ssp"
                            tools:text="Dummy Text" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_header"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:background="@color/color_F6F7F9"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_16sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_quick"
                            android:drawablePadding="@dimen/_5sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/color_313d48"
                            android:textSize="@dimen/_14ssp"
                            tools:text="32 min ago" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_dollor_new"
                            android:drawablePadding="@dimen/_5sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/color_313d48"
                            android:textSize="@dimen/_14ssp"
                            tools:text="32 min ago" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_place"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_nearby"
                            android:drawablePadding="@dimen/_3sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/color_313d48"
                            android:textSize="@dimen/_14ssp"
                            tools:text="32 min ago" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_days"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24sdp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_calendar"
                            android:drawablePadding="@dimen/_5sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/color_313d48"
                            android:textSize="@dimen/_14ssp"
                            tools:text="32 min ago" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_17sdp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            app:fontFamily="@font/neue_haas_display_medium"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/color_0b41a8"
                            android:textSize="@dimen/_13ssp"
                            android:visibility="gone"
                            tools:text="32 min ago" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/iv_main_user_profile"
                            android:layout_width="@dimen/_44sdp"
                            android:layout_height="@dimen/_44sdp"
                            android:background="@drawable/bg_blue_circle"
                            android:scaleType="fitXY"
                            android:src="@drawable/active_circle"
                            app:riv_oval="true" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/_8sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_main_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_14sdp"
                                android:ellipsize="end"
                                app:fontFamily="@font/neue_haas_display_medium"
                                android:maxLines="2"
                                android:textColor="@color/color_161d4a"
                                android:textSize="@dimen/_17ssp"
                                tools:text="Dummy Text" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_job_user_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:drawableStart="@drawable/ic_star"
                                android:drawablePadding="@dimen/_5sdp"
                                android:ellipsize="end"
                                app:fontFamily="@font/inter_regular"
                                android:maxLines="2"
                                android:textColor="@color/color_313d48"
                                android:textSize="@dimen/_14ssp"
                                tools:text="Dummy Text" />


                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_go"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/next" />

                    </LinearLayout>


                </LinearLayout>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_result_title_no_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_120sdp"
                        android:ellipsize="end"
                        app:fontFamily="@font/neue_haas_display_roman"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/no_data_found"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_18ssp"
                        android:visibility="gone" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_quotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_quote_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/bg_drawable_rect_dfe5ef"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:paddingStart="@dimen/_20sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:text="@string/quotes"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_15ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_accept_quote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:background="@drawable/bg_btn_yellow"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/_22sdp"
                        android:paddingTop="@dimen/_18sdp"
                        android:paddingEnd="@dimen/_22sdp"
                        android:paddingBottom="@dimen/_18sdp"
                        android:text="@string/accept_quote"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_15ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_decline_quote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/bg_blue_rect"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/_22sdp"
                        android:paddingTop="@dimen/_18sdp"
                        android:paddingEnd="@dimen/_22sdp"
                        android:paddingBottom="@dimen/_18sdp"
                        android:text="@string/decline_quote"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_15ssp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_cancelled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:background="@drawable/bg_btn_red"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/_22sdp"
                        android:paddingTop="@dimen/_18sdp"
                        android:paddingEnd="@dimen/_22sdp"
                        android:paddingBottom="@dimen/_18sdp"
                        android:text="@string/cancelled"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
