<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f6f7f9"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/temp_mile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_left" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_milestone_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18ssp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:text="@string/quotes_"
                    android:textColor="@color/color_161d4a"
                    android:textSize="@dimen/_34ssp">

                </androidx.appcompat.widget.AppCompatTextView>

        <!--   <androidx.core.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">-->

                <LinearLayout
                    android:id="@+id/ll_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_6sdp">

                    <FrameLayout
                        android:id="@+id/fl_background"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:background="@drawable/bg_selected_rect_trade_new">

                        <ImageView
                            android:id="@+id/iv_user_profile"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/electrician"
                            app:tint="@color/white" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-1dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/neue_haas_display_medium"
                            android:maxLines="2"
                            android:textColor="@color/color_161d4a"
                            android:textSize="@dimen/_16ssp"
                            tools:text="Dummy Text" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/inter_regular"
                            android:maxLines="2"
                            android:textColor="@color/color_313d48"
                            android:textSize="@dimen/_14ssp"
                            tools:text="Dummy Text" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_header"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_16sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_quick"
                            android:drawablePadding="@dimen/_5sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/color_313d48"
                            android:textSize="@dimen/_14ssp"
                            tools:text="32 min ago" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_dollor_new"
                            android:drawablePadding="@dimen/_5sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/color_313d48"
                            android:textSize="@dimen/_14ssp"
                            tools:text="32 min ago" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_place"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_nearby"
                            android:drawablePadding="@dimen/_3sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/color_313d48"
                            android:textSize="@dimen/_14ssp"
                            tools:text="32 min ago" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_days"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24sdp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_calendar"
                            android:drawablePadding="@dimen/_5sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/color_313d48"
                            android:textSize="@dimen/_14ssp"
                            tools:text="32 min ago" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_17sdp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            app:fontFamily="@font/neue_haas_display_medium"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/color_0b41a8"
                            android:textSize="@dimen/_13ssp"
                            android:visibility="gone"
                            tools:text="32 min ago" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_time_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_21ssp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_6sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_title_sort_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:maxLines="2"
                        android:text="@string/lowest_quote"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_13ssp" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_drop_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:src="@drawable/dropdown" />

                </LinearLayout>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_result_title_no_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_120sdp"
                        android:ellipsize="end"
                        app:fontFamily="@font/neue_haas_display_roman"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/no_data_found"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_18ssp"
                        android:visibility="gone" />

                    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                        android:id="@+id/sr_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_quotes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/_20sdp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/rowitem_recommended_jobs" />

                    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>


            <!--</androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>-->
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
