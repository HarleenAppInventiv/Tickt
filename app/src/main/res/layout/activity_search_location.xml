<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginStart="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:id="@+id/search_toolbar_back"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_left"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_skip"
                app:fontFamily="@font/neue_haas_display_medium"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/skip"
                android:textSize="@dimen/_16ssp"
                android:layout_marginStart="@dimen/_14sdp"
                android:textColor="@color/color_123f95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:gravity="center"
            android:id="@+id/ll_header"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_marginStart="@dimen/_8sdp"
                app:riv_oval="true"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_circle_dfe5ef"
                android:layout_width="@dimen/_45sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/active_circle"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/iv_user_profile" />

            <LinearLayout
                android:layout_marginStart="-1dp"
                android:padding="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/neue_haas_display_medium"
                    tools:text="Dummy Text"
                    android:id="@+id/tv_title"
                    android:textSize="@dimen/_15ssp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/color_313d48" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/inter_regular"
                    tools:text="Dummy Text"
                    android:id="@+id/tv_details"
                    android:textSize="@dimen/_13ssp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/color_313d48" />


            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_search_title"
            android:layout_marginTop="@dimen/_15sdp"
            app:fontFamily="@font/neue_haas_display_medium"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@string/where_do_you_want_to_work"
            android:textSize="@dimen/_32ssp"
            android:layout_marginStart="@dimen/_18sdp"
            android:textColor="@color/color_123f95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_time_picker"
                android:textSize="@dimen/_16ssp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingTop="@dimen/_13sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:background="@drawable/bg_edittext_0b41a8"
                android:textColorHint="@color/color_313d48"
                android:textColor="@color/color_313d48"
                app:fontFamily="@font/inter_regular"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="@string/type_state_city_subrub" />

            <LinearLayout
                android:id="@+id/ll_current_time_picker"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:background="@drawable/bg_drawable_rect_dfe5ef"
                android:gravity="center"
                android:layout_height="@dimen/_50sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/icon_gps"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:text="@string/use_my_current_location"
                    android:textSize="@dimen/_14ssp"
                    android:gravity="center"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textColor="@color/color_161d4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_continue"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/_22sdp"
            android:paddingEnd="@dimen/_22sdp"
            android:paddingTop="@dimen/_16sdp"
            android:paddingBottom="@dimen/_16sdp"
            android:layout_margin="@dimen/_18sdp"
            android:layout_gravity="end"
            android:background="@drawable/bg_btn_yellow"
            android:text="@string/continue_"
            android:textSize="@dimen/_14ssp"
            app:fontFamily="@font/neue_haas_display_medium"
            android:textColor="@color/color_161d4a"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>
