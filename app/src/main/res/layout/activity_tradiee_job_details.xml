<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <include
            android:id="@+id/il_header"
            layout="@layout/layout_right_icon_toolbar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:fontFamily="@font/neue_haas_display_medium"
            android:text="@string/job_details_"
            android:textColor="@color/color_161d4a"
            android:textSize="@dimen/_32ssp" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/sr_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_8sdp">

                <LinearLayout
                    android:id="@+id/ll_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_change_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_change_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                app:fontFamily="@font/neue_haas_display_medium"
                                android:maxLines="2"
                                android:text="@string/change_request_details"
                                android:textColor="@color/color_161d4a"
                                android:textSize="@dimen/_17ssp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_change_reason"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:ellipsize="end"
                                app:fontFamily="@font/neue_haas_display_medium"
                                android:lineSpacingExtra="@dimen/_2sdp"
                                android:maxLines="2"
                                android:textColor="@color/color_161d4a"
                                android:textSize="@dimen/_14ssp"
                                android:visibility="gone"
                                tools:text="Dummy Text" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_change_note"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:ellipsize="end"
                                app:fontFamily="@font/inter_regular"
                                android:lineSpacingExtra="@dimen/_2sdp"
                                android:maxLines="2"
                                android:textColor="@color/color_313d48"
                                android:textSize="@dimen/_14ssp"
                                android:visibility="gone"
                                tools:text="DummyTextkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/linChangeReq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvChangeAccept"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_btn_yellow"
                                    app:fontFamily="@font/neue_haas_display_medium"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_22sdp"
                                    android:paddingTop="@dimen/_20sdp"
                                    android:paddingEnd="@dimen/_22sdp"
                                    android:paddingBottom="@dimen/_20sdp"
                                    android:text="@string/accept"
                                    android:textColor="@color/color_161d4a"
                                    android:textSize="@dimen/_14ssp" />


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvChangeReject"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginStart="@dimen/_16sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_drawable_rect_dfe5ef"
                                    app:fontFamily="@font/neue_haas_display_medium"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_22sdp"
                                    android:paddingTop="@dimen/_20sdp"
                                    android:paddingEnd="@dimen/_22sdp"
                                    android:paddingBottom="@dimen/_20sdp"
                                    android:text="@string/reject"
                                    android:textColor="@color/color_161d4a"
                                    android:textSize="@dimen/_14ssp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_cancellation_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_cancel_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                app:fontFamily="@font/neue_haas_display_medium"
                                android:maxLines="2"
                                android:text="@string/job_cancellation_request"
                                android:textColor="@color/color_161d4a"
                                android:textSize="@dimen/_17ssp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_cancel_reason"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:ellipsize="end"
                                app:fontFamily="@font/neue_haas_display_medium"
                                android:lineSpacingExtra="@dimen/_2sdp"
                                android:maxLines="2"
                                android:textColor="@color/color_161d4a"
                                android:textSize="@dimen/_14ssp"
                                tools:text="Dummy Text" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_cancel_note"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:ellipsize="end"
                                app:fontFamily="@font/inter_regular"
                                android:lineSpacingExtra="@dimen/_2sdp"
                                android:maxLines="2"
                                android:textColor="@color/color_313d48"
                                android:textSize="@dimen/_14ssp"
                                tools:text="DummyTextkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/linCancelReq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvCancelAccept"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_btn_yellow"
                                    app:fontFamily="@font/neue_haas_display_medium"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_22sdp"
                                    android:paddingTop="@dimen/_20sdp"
                                    android:paddingEnd="@dimen/_22sdp"
                                    android:paddingBottom="@dimen/_20sdp"
                                    android:text="@string/accept"
                                    android:textColor="@color/color_161d4a"
                                    android:textSize="@dimen/_14ssp" />


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvCancelReject"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginStart="@dimen/_16sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_drawable_rect_dfe5ef"
                                    app:fontFamily="@font/neue_haas_display_medium"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_22sdp"
                                    android:paddingTop="@dimen/_20sdp"
                                    android:paddingEnd="@dimen/_22sdp"
                                    android:paddingBottom="@dimen/_20sdp"
                                    android:text="@string/reject"
                                    android:textColor="@color/color_161d4a"
                                    android:textSize="@dimen/_14ssp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:padding="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@+id/ll_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:id="@+id/fl_background"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:background="@drawable/bg_selected_rect_trade_new">

                                <ImageView
                                    android:id="@+id/iv_user_profile"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/electrician"
                                    app:tint="@color/white" />

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_8sdp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:ellipsize="end"
                                    app:fontFamily="@font/neue_haas_display_medium"
                                    android:maxLines="2"
                                    android:textColor="@color/color_161d4a"
                                    android:textSize="@dimen/_17ssp"
                                    tools:text="Dummy Text" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:ellipsize="end"
                                    app:fontFamily="@font/inter_regular"
                                    android:maxLines="2"
                                    android:textColor="@color/color_313d48"
                                    android:textSize="@dimen/_14ssp"
                                    tools:text="Dummy Text" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rl_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_header"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_light_rect"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_3sdp"
                            android:paddingTop="@dimen/_16sdp"
                            android:paddingEnd="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_16sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_time"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_16sdp"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_quick"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:ellipsize="end"
                                    app:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:maxLines="2"
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/color_313d48"
                                    android:textSize="@dimen/_14ssp"
                                    tools:text="32 min ago" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_money"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_16sdp"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_dollor_new"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:ellipsize="end"
                                    app:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/color_313d48"
                                    android:textSize="@dimen/_14ssp"
                                    tools:text="32 min ago" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_place"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_13sdp"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_nearby"
                                    android:drawablePadding="@dimen/_3sdp"
                                    android:ellipsize="end"
                                    app:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/color_313d48"
                                    android:textSize="@dimen/_14ssp"
                                    tools:text="32 min ago" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_days"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_24sdp"
                                    android:layout_weight="1"
                                    android:drawableStart="@drawable/ic_calendar"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:ellipsize="end"
                                    app:fontFamily="@font/inter_regular"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/color_313d48"
                                    android:textSize="@dimen/_14ssp"
                                    tools:text="32 min ago" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_status"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_17sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    app:fontFamily="@font/neue_haas_display_medium"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/color_0b41a8"
                                    android:textSize="@dimen/_13ssp"
                                    android:visibility="gone"
                                    tools:text="32 min ago" />
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_job_spec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_job_types"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/neue_haas_display_medium"
                            android:maxLines="2"
                            android:text="@string/jobtype_"
                            android:textColor="@color/color_161d4a"
                            android:textSize="@dimen/_17ssp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_job_types"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/rowitem_jobs" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_specialization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_22sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/neue_haas_display_medium"
                            android:maxLines="2"
                            android:text="@string/specialisation_needed"
                            android:textColor="@color/color_161d4a"
                            android:textSize="@dimen/_17ssp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_specialization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/rowitem_specialization" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_desc_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:ellipsize="end"
                        app:fontFamily="@font/neue_haas_display_medium"
                        android:maxLines="2"
                        android:text="@string/job_description"
                        android:textColor="@color/color_161d4a"
                        android:textSize="@dimen/_17ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_19sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        app:fontFamily="@font/inter_regular"
                        android:text="@string/job_description"
                        android:textColor="@color/color_313d48"
                        android:textSize="@dimen/_13ssp" />

                    <LinearLayout
                        android:id="@+id/ll_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:background="@drawable/bg_blue_rect"
                        android:gravity="center"
                        android:padding="@dimen/_14sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/question" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_job_question_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            app:fontFamily="@font/neue_haas_display_medium"
                            android:gravity="center_vertical"
                            android:text="0 question"
                            android:textColor="@color/color_161d4a"
                            android:textSize="@dimen/_16ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_milestone_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_job_milestone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_23sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/neue_haas_display_medium"
                            android:maxLines="2"
                            android:text="@string/job_milestones"
                            android:textColor="@color/color_161d4a"
                            android:textSize="@dimen/_17ssp" />

                        <RelativeLayout
                            android:id="@+id/rel_milestone_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_23sdp"
                            android:layout_marginEnd="@dimen/_18sdp"
                            android:visibility="gone">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_milestone_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:layout_toStartOf="@+id/tv_milestone_status"
                                android:ellipsize="end"
                                app:fontFamily="@font/neue_haas_display_roman"
                                android:maxLines="1"
                                android:textColor="@color/color_313d48"
                                android:textSize="@dimen/_16ssp"
                                tools:text="milestone 2 of 7" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_milestone_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/tv_milestone_count"
                                android:layout_alignBottom="@+id/tv_milestone_count"
                                android:layout_alignParentEnd="true"
                                android:drawablePadding="@dimen/_6sdp"
                                app:fontFamily="@font/neue_haas_display_medium"
                                android:gravity="center_vertical"
                                android:textAllCaps="true"
                                android:textColor="@color/color_0b41a8"
                                android:textSize="@dimen/_10ssp"
                                tools:text="Approved/Awaiting" />

                            <ProgressBar
                                android:id="@+id/progressBarHor"
                                style="@style/CustomProgressBar"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_8sdp"
                                android:layout_below="@+id/tv_milestone_count"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_18sdp"
                                android:max="100"
                                android:progress="0" />
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_job_milestone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/row_milestones" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_photos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:ellipsize="end"
                            app:fontFamily="@font/neue_haas_display_medium"
                            android:maxLines="2"
                            android:text="@string/photos_and_docs"
                            android:textColor="@color/color_161d4a"
                            android:textSize="@dimen/_17ssp" />

                        <androidx.recyclerview.widget.RecyclerView
