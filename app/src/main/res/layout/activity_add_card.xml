<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".mvvm.view.builder.postjob.TemplateMilestoneActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/temp_mile_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_left" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_card_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_delete_bank_acc" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_milestone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:fontFamily="@font/neue_haas_display_medium"
            android:text="@string/payment_details"
            android:textColor="@color/color_161d4a"
            android:textSize="@dimen/_34ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:fontFamily="@font/inter_regular"
            android:text="@string/enter_your_card_details"
            android:textColor="@color/color_313d48"
            android:textSize="@dimen/_14ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:fontFamily="@font/inter_regular"
            android:text="@string/card_number_"
            android:textColor="@color/color_313d48"
            android:textSize="@dimen/_14ssp" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ed_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:background="@drawable/bg_edittext"
            app:fontFamily="@font/neue_haas_display_medium"
            android:hint="@string/card_number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="19"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_18sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_18sdp"
            android:singleLine="true"
            android:textColor="@color/color_161d4a"
            android:textColorHint="@color/color_99A4B6"
            android:textSize="@dimen/_16ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:fontFamily="@font/inter_regular"
            android:text="@string/card_holder_name_"
            android:textColor="@color/color_313d48"
            android:textSize="@dimen/_14ssp" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ed_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:background="@drawable/bg_edittext"
            app:fontFamily="@font/neue_haas_display_medium"
            android:hint="@string/card_holder_name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_18sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_18sdp"
            android:singleLine="true"
            android:textColor="@color/color_161d4a"
            android:textColorHint="@color/color_99A4B6"
            android:textSize="@dimen/_16ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/inter_regular"
                    android:text="@string/expiration_date"
                    android:textColor="@color/color_313d48"
                    android:textSize="@dimen/_14ssp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ed_expiry_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/bg_edittext"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:hint="@string/mm_yy"
                    android:imeOptions="actionNext"
                    android:maxLength="5"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_18sdp"
                    android:singleLine="true"
                    android:textColor="@color/color_161d4a"
                    android:textColorHint="@color/color_99A4B6"
                    android:textSize="@dimen/_16ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/inter_regular"
                    android:text="@string/cvv_cvc"
                    android:textColor="@color/color_313d48"
                    android:textSize="@dimen/_14ssp" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_cvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/bg_edittext"
                    app:fontFamily="@font/neue_haas_display_medium"
                    android:hint="@string/cvv"
                    android:imeOptions="actionDone"
                    android:inputType="numberPassword"
                    android:maxLength="3"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_18sdp"
                    android:singleLine="true"
                    android:textColor="@color/color_161d4a"
                    android:textColorHint="@color/color_99A4B6"
                    android:textSize="@dimen/_16ssp" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tv_add_card_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/bg_round_corner_dfe5ef"
            android:backgroundTint="@color/color_fee600"
            app:fontFamily="@font/neue_haas_display_medium"
            android:paddingStart="@dimen/_22sdp"
            android:paddingTop="@dimen/_16sdp"
            android:paddingEnd="@dimen/_22sdp"
            android:paddingBottom="@dimen/_16sdp"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/color_161d4a"
            android:textSize="@dimen/_14ssp">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
